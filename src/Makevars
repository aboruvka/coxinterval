ifdef CPLEXHOME
CPLEXDIR = $(CPLEXHOME)
endif
ifndef CPLEXDIR
UNAME = $(shell uname -s)
ifeq ($(UNAME), Darwin)
CPLEXDIR = /Users/*/Applications/IBM/ILOG/CPLEX*
else
CPLEXDIR = /opt/*/ILOG/CPLEX*
endif
endif
ifndef CPLEXLIBDIR
CPLEXLIBDIR = $(shell ls -d $(CPLEXDIR)/cplex/lib/*/* | head -n1)
endif
ifndef CLNFLAGS
CLNFLAGS = -lcplex -lm
endif
CPLEXINDIR = $(wildcard $(CPLEXDIR)/cplex/include)
PKG_CPPFLAGS = $(SHLIB_PTHREAD_FLAGS) -I$(CPLEXINDIR)
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_PTHREAD_FLAGS) \
	-L$(CPLEXLIBDIR) $(CLNFLAGS)
